<div class="container">
<div class="row">
<div id="confirmation-dialog" style="display: none">
	<p>Are you sure you want to update this record?</p>
</div>
<div id="edit-record" class="modal fade" role="dialog">
</div>
  <div id="filters" class="col-sm-6">
    <h4>Filter Events</h4>
      <form id="form-filters" class="form-inline" action="" method="post">
        <div class="form-group">
        <label for="year-filter">Year</label>
        <input id="year-filter" type="text"></input>
        </div>
        <div class="form-group">
          <label for="state-filter">State</label>
          <%= select_tag "state-filter", options_for_select(us_states) %>
        </div>
    </form>
  </div>
</div>
  <div class="row">
<div id="event-column" class="col-sm-6">
<div class="column-header">
<h2 class="">Events</h2>
</div>
<% @results.each do |event| %>
<div class="entry" data-parade-id="<%= event.get_parade_id %>">
<h4>
<span class="entry-header">
<%= event.get_parade_name %>
</span><br/>
<%= event.get_city + ", " +  event.get_state %><br/>
<div class="date">
<% unless event.get_start_date.nil? %>
<%= event.get_start_date.to_time.strftime("%b %d, %Y") %>
<% end %>
-
<% unless event.get_end_date.nil? %>
<%= event.get_end_date.try(:to_time).try(:strftime,"%b %d, %Y") %>
<% end %>

</div>
</h4>
</div>
<button type="button" class="edit-button btn" id="edit-parade" data-edit-parade-id="<%= event.get_parade_id %>" style="display: none;">
Edit
</button>
<% end %>
</div>
<div id="parade-notes" class="col-sm-6">
</div>
</div>
<div class="row">
<div id="home-results" class="home-column col-sm-6">
</div>
<div id="home-notes" class="col-sm-6">
</div>
</div>
<div class="row">
<div id="order-results" class="col-sm-6">
</div>
</div>
</div>
