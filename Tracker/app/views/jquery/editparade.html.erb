<div class="modal-dialog">

<!-- Modal content-->
<div class="modal-content">
<div class="modal-header">
<button type="button" class="close" data-dismiss="modal">&times;</button>
<h4 class="modal-title">Editing Parade</h4>
</div>
<div class="modal-body">
<form id="editparadeform">
<div class="form-group">
<label for="parade-name">Parade Name</label>
<input id="parade-name" class="form-control" type="text" value="<%= @parade.get_parade_name %>"></input>
</div>
<div class="form-group">
<label for="parade-city">City</label>
<input id="parade-city" class="form-control" type="text" value="<%= @parade.get_city %>"></input>
</div>
<div class="form-group">
<label for="parade-state">State</label><br/>
<%= select_tag "parade-state", options_for_select(us_states, @parade.get_state) %>
</div>
<div class="form-group">
<label for="parade-start-date">Start Date</label>
<input id="parade-start-date" class="form-control" type="date" value="<%= @parade.get_start_date.try(:to_time).try(:strftime,"%Y-%m-%d") %>"></input>
<label for="parade-end-date">End Date</label>
<input id="parade-end-date" class="form-control" type="date" value="<%= @parade.get_end_date.try(:to_time).try(:strftime,"%Y-%m-%d") %>"></input>
</div>
<div class="form-group">
<label for="parade-end-date">Notes</label>
<textarea id="parade-notes-modal" class="form-control" form="editparadeform"><%= @parade.get_notes %></textarea>
</div>

</form>
</div>
<div class="modal-footer">
  <button id="updateparadebtn" type="button" class="btn btn-primary">Save</button>
<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>
</div>

</div>
</div>
