<div class="modal-dialog">

<!-- Modal content-->
<div class="modal-content">
<div class="modal-header">
<button type="button" class="close" data-dismiss="modal">&times;</button>
<h4 class="modal-title">Editing Home</h4>
</div>
<div class="modal-body">
<form id="edithomeform">
<div class="form-group">
<label for="home-name">Home Name</label>
<input id="home-name" class="form-control" type="text" value="<%= @home.get_home_name %>"></input>
  <label for="home-num">Home Number</label>
<input id="home-num" class="form-control" type="text" value="<%= @home.get_home_number %>"></input>
</div>
<div class="form-group">
  <label for="home-address">Address</label>
<input id="home-address" class="form-control" type="text" value="<%= @home.get_home_address %>"></input>
<label for="home-city">City</label>
<input id="home-city" class="form-control" type="text" value="<%= @home.get_city %>"></input>
<label for="home-state">State</label><br/>
<%= select_tag "home-state", options_for_select(us_states, @home.get_state) %><br/>
  <label for="home-zip">Zip Code</label>
<input id="home-zip" class="form-control" type="text" value="<%= @home.get_home_zipcode %>"></input>
</div>
<div class="form-group">
<label for="home-builder">Builder</label><br/>
  <%= select_tag "home-builder", options_from_collection_for_select(@builderlist, 'get_builder_id', 'get_name_of_builder', @home.get_builder.get_builder_id) %><br/>

</div>
<div class="form-group">
<label for="home-end-date">Notes</label>
<textarea id="home-notes-modal" class="form-control" form="edithomeform"><%= @home.get_notes %></textarea>
</div>
</form>
</div>
<div class="modal-footer">
  <button id="updatehomebtn" type="button" class="btn btn-primary">Save</button>
<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>
</div>

</div>
</div>
