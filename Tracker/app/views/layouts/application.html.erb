<!DOCTYPE html>
<html>
<head>
  <title>Tracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,400italic' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
</head>
<body>
 <% if current_user %>
  <div class="row">
	<div class="col-md-12">
	<nav class="navbar navbar-default">
	<div class="navbar-header">
      		<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu-collapse" aria-expanded="false">
              		<span class="sr-only">Toggle navigation</span>
	                <span class="icon-bar"></span>
		  	<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</button>
	</div>
	<div class="collapse navbar-collapse" id="menu-collapse"> 
	  <ul class="nav nav-pills">
      <li class="navbar-text">Welcome, <%= current_user.name %>!</li>
	  	<li><%= link_to "Events" , root_path, class: "btn btn-default"%></li>
	  	<li><%= link_to "Add" , '/addnew/', class: "btn btn-default"%></li>
	  	<li><a class="btn btn-default" href="#">Admin</a></li>
	  	<li class="active logout"><%= link_to "Logout", "/signout/" %></li>
	  </ul>
	</div>
	</nav>
	</div>
  </div>
      <%= yield %>
      <% else %>
    <div class="container">
      <div class="row">
        <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in", class: "btn btn-primary", style: "position:absolute;top:50%;left:50%"%>
      </div>
  </div>
      <% end %>





</body>
</html>
