<!DOCTYPE html>
<html>
<head>
  <title>Tracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,400italic' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
</head>
<body>
 <% if current_user %>

  <div class="row">
	<div class="col-md-12">
	  <ul class="nav nav-pills">
      <li class="navbar-text">Welcome, <%= current_user.name %>!</li>
	  	<li><a class="btn btn-default" href="#">Add</a></li>
	  	<li><a class="btn btn-default" href="#">Admin</a></li>
	  	<li class="active logout"><a href="signout/">Logout</a></li>
	  </ul>
	</div>
  </div>
      <%= yield %>
      <% else %>
    <div class="container">
      <div class="row">
        <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in", class: "btn btn-primary", style: "position:absolute;top:50%;left:50%"%>
      </div>
  </div>
      <% end %>





</body>
</html>
